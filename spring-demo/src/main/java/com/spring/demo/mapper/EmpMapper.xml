<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.demo.mapper.EmpMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.spring.demo.model.dos.Emp">
        <id column="id" property="id"/>
        <result column="emp_work_id" property="empWorkId"/>
        <result column="emp_name" property="empName"/>
        <result column="emp_dep_name" property="empDepName"/>
        <result column="emp_post_name" property="empPostName"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, emp_work_id, emp_name, emp_dep_name, emp_post_name, emp_level, emp_workarea, emp_skill, emp_phone, emp_idcardnum, emp_sex, emp_age, emp_nation, emp_in, emp_out, emp_allworkday, emp_allmoney, emp_remarks, emp_status, emp_entry_time, emp_separation_time, emp_work_status
    </sql>

    <!--resultType 如果返回类型是集合，类型是指泛型参数的类型-->
    <select id="listByEmp" parameterType="java.util.List" resultType="com.spring.demo.model.dos.Emp">
        SELECT
        <include refid="Base_Column_List"></include>
        from
        emp
        where
        id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>

</mapper>
